#include "/org/smartfrog/predicates.sf"

/**
 * Include the core smartfrog components.
 */
#include "/org/smartfrog/components.sf"
#include "/org/smartfrog/functions.sf";
#include "/org/smartfrog/services/filesystem/components.sf"
#include "/org/smartfrog/services/www/components.sf";
#include "/org/smartfrog/services/jetty/components.sf";
#include "/org/smartfrog/projects/alpine/config/smartfrog/components.sf";


AlpineServerOnJetty extends Compound {

    port TBD;
    home TBD;


   jettyServer extends CoreJettyServer {

      jettyhome LAZY PARENT:home;

      port PARENT:port;

      server "alpine";

    }


    listener extends JettyListener {
        listenerPort port;
        //serverHost host;
        server LAZY jettyServer;
    }

    servlets extends ServletContext {
        
        resourceBase "./tmp";
        contextPath "/servlets/";
        server LAZY jettyServer;

     }

      alpineServlet extends AlpineServletOnJetty {
         pathSpec "/alpine/*";
         initOrder 5;
         context LAZY servlets;
      }

}


server extends AlpineServerOnJetty {

    home LAZY PROPERTY java.io.tmpdir;

    //this is our endpoint
    endpoint extends EchoEndpoint {
        name "echoEndpoint";
        path "/echo/";
        servlet LAZY alpineServlet;
    }

    

    //fetch the page every so often, just to see that we are happy
    ping extends LivenessPage {
        sfProcessName "newVM";
        enabled PARENT:liveness;
        host LAZY PARENT:servlets:ipaddr;
        port PARENT:port;
        page LAZY endpoint:absolutePath;
        checkFrequency 1;
    }
    
    liveness true;
}


sfConfig extends server {


    port 5050;

    liveness false;
}