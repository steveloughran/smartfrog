#include "/org/smartfrog/test/system/java/libraryTestBase.sf"

EmptyRepository extends Compound {

    sfSyncTerminate true;


	

    /**
     * Maven repository at ibiblio.org. Really we should permit mirrors; or include
     * the mirror list for easy selection.
     */

    cacheDirectory extends File {
        //JVM property user.home
        dir LAZY PROPERTY user.home;
        //subdir
        filename ".maven/repository";
    }

    lib extends Library {

        repositories [| |];
		policy extends Maven2Policy;
		localCachePolicy policy;
		remoteCachePolicy policy;
        cacheDir LAZY cacheDirectory:absolutePath;


    }

    commons-logging extends JarArtifact {
        library PARENT:lib;
        project "commons-logging";
        version "1.0.4";
    }

}


sfConfig EmptyRepository;