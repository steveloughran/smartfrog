#include "/org/smartfrog/services/filesystem/components.sf"
#include "/org/smartfrog/services/assertions/components.sf"
#include "/org/smartfrog/services/hadoop/conf/components.sf"



testDefaultConf extends TestCompound {

  action extends DefaultHadoopConfiguration  {
    conf.dump true;
  }

  tests extends Sequence {

  }
}


testDefaultConfValues extends testDefaultConf {
  description "test that values are read and attributes set from them";

  tests extends Sequence {

    hnl LAZY action4:hadoop.native.lib;

    testHadoopNativeLib extends AssertWorkflow {
      reference LAZY action;
      referenceRequired true;
      hasAttribute "hadoop.native.lib";
      attributeEquals "true";
    }

    fs.hdfs.impl extends testHadoopNativeLib {
      hasAttribute "fs.hdfs.impl";
      attributeEquals "org.apache.hadoop.hdfs.DistributedFileSystem";
    }

  }

}



testOverride extends testDefaultConfValues {
  description "test that an override is picked up";
  action:hadoop.native.lib false;
  tests:testHadoopNativeLib:attributeEquals "false4";
}
