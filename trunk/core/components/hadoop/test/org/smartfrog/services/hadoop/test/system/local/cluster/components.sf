#include "/org/smartfrog/services/hadoop/test/system/local/components.sf"



testLocalCluster extends ExpectDeploy {
  description "bring up a full cluster";



  action extends LocalClusterCompound {
    tracker "localhost:8014";
    mapred.job.tracker tracker;
    jobTracker:mapred.job.tracker tracker;
    jobTracker:mapred.job.tracker.http.address  "localhost:50032";
  }

  tests extends Sequence {
    //run some workflow operations

    //the cluster for all the tests
    cluster LAZY action:cluster;


    WaitForClusterLive extends WaitFor {
      interval 500;
      timeout 10000;
      condition extends ClusterStatusCondition {
        mapred.job.tracker action:tracker;
      }
    }


    rootDirExists extends DfsPathExistsWorkflow {
      cluster LAZY PARENT:cluster;
      path "/";
    }

/*
    formatLocal extends DfsFormatFileSystem {
      cluster LAZY PARENT:cluster;
      nameDirectories LAZY cluster:nameDirectories;
    }*/

    touch extends DfsCreateFile {
      cluster LAZY PARENT:cluster;
      path "/test-filename";
      text "this is a very small file for Hadoop";
    }

    assertFileExists extends DfsPathExistsWorkflow {
      cluster LAZY PARENT:cluster;
      path touch:path;
    }
    
  }

}



testLocalClusterForked extends testLocalCluster {
  action:datanode:sfProcessName "testLocalClusterForked-datanode";
  action:namenode:sfProcessName "testLocalClusterForked-namenode";
  action:taskTracker:sfProcessName "testLocalClusterForked-tasktracker";
  action:jobTracker:sfProcessName "testLocalClusterForked-jobtracker";
  action:jobTracker:mapred.job.tracker  "localhost:8016";
  action:jobTracker:mapred.job.tracker.http.address  "0.0.0.0:50033";
}

