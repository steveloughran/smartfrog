      </wsdl:input>
      <wsdl:output name="deployResponse">
        <wsdlsoap:body use="literal"/>
      </wsdl:output>
    </wsdl:operation>

    <wsdl:operation name="undeploy">
      <wsdlsoap:operation soapAction=""/>
      <wsdl:input name="undeployRequest">
