#include "org/smartfrog/services/xml/test/files/xmlTestBase.sf"


/**
 * test a document
 */

rootDoc extends XmlDocument {

    sourceFile

}

tempFile extends TempFile {
    prefix "testxml";
    suffix ".xml";
    deleteOnExit true;
}

textFile extends TextFile {
    file tempFile;
    text xmltext;
}

/**
 XML doc as a multiline string
 */
xmltext
##<?xml value="1.0" ?>
<!DOCTYPE meals>
<meals >
  <meal name="soup" served="warm">
    Tomato soup
  </meal>
  <meal name="soup" served="cold">
    Gazpacho
  </meal>
  <meal name="cheese" served="cold">
    Cheddar Cheese
  </meal>
</meals>
##;



sfConfig  extends Compound {
    sfSyncTerminate true;

    file extends ROOT:textFile;

    xml extends XmlDocument {
        filename LAZY file;
    }


};


