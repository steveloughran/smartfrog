#include "org/smartfrog/components.sf"
#include "org/smartfrog/services/persistence/storage/components.sf"



Storage extends DATA {
    sfDeployerClass "org.smartfrog.services.persistence.deployer.StorageRecoveryDeployerImpl";
    wfStorageClass TBD;
}


NullStorage extends Storage {
    wfStorageClass "org.smartfrog.services.persistence.storage.nullstorage.NullStorageImpl";
    wfStorageRepository "";
    wfStorageDatabaseName NULL;       // null means make one up
}


RedeployPersistence extends DATA {
    sfPersistenceModelClass "org.smartfrog.services.persistence.model.RedeployPersistence";
}


RebindPersistence extends DATA {
    sfPersistenceModelClass "org.smartfrog.services.persistence.model.WFOriginalPersistence";
}


MixedModelPersistence extends DATA {
    sfPersistenceModelClass "org.smartfrog.services.persistence.model.MixedModel";
}


NullPersistence extends DATA {
    sfPersistenceModelClass "org.smartfrog.services.persistence.model.NullModel";
}


RComponent extends Compound {
    sfClass "org.smartfrog.services.persistence.recoverablecomponent.RComponentImpl";
    sfExport true;

    sfPersistenceModelConfig TBD;
    wfStorageConfigData      TBD;
}


NullRComponent extends RComponent {
    sfPersistenceModelConfig extends DATA NullPersistence;
    wfStorageConfigData      extends DATA NullStorage;
}


StorageAgent extends Compound{
	sfClass  "org.smartfrog.services.persistence.storage.StorageAgentImpl";
	sfExport true;
}


RecoveryAgent extends Compound {
    sfClass             "org.smartfrog.services.persistence.recovery.RecoveryAgent";
    wfStorageConfigData extends DATA Storage;
}




mycomponent extends RComponent {

    wfStorageConfigData extends BDBStorage;

}
