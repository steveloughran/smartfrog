#include "/org/smartfrog/services/www/webapplication.sf"
#include "/org/smartfrog/services/jetty/components.sf";
#include "/org/smartfrog/services/www/testwar-m2.sf"
#include "/org/smartfrog/services/www/jetty/test/system/local_test_jetty_server.sf"

sfConfig extends Compound {
    sfSyncTerminate true;

    libraries extends testwarLoader;

    port 5050;
    home LAZY PROPERTY java.io.tmpdir;

   /*
    this is the jetty server itself
    */
   server extends CoreJettyServer {

      jettyhome PARENT:home;

      port PARENT:port;

      deployedWar extends WebApplication {
            server LAZY PARENT;
            filename LAZY libraries:testwar:absolutePath;
            contextPath "testwar";
        }


   }


    listener extends JettyListener {
        listenerPort port;
        server LAZY PARENT:server;
    }


    //this is here because without it, ping doesnt get the lazy information from
    //the webapp in time
    //ping LAZY server:ping;

    //there's a bit of a race condition here; no files are

    ping extends LivenessPage {
            host LAZY server:listener:ipaddr;
            port server:port;
            page server:deployedWar:contextPath;
            checkFrequency 1;
            followRedirects true;
    }


}