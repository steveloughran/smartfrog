#include "org/smartfrog/components.sf"
#include "org/smartfrog/services/jetty/components.sf";

//get the jetty home at the destination, not locally, as we are doing a remote deploy
jetty_home LAZY PROPERTY jetty.home;

//hard coded hostname,
hostname 127.0.0.1;

resourcebase LAZY PROPERTY user.home;

sfConfig extends Compound {
   sfProcessHost ROOT:hostname;
   adminServer extends HttpServerAdmin {
         httpserverHost ROOT:hostname; // optional
         listenerPort 8081; // mandatory
   }
   server extends HttpServer {
      jettyhome ROOT:jetty_home; // mandatory
      serverHost ROOT:hostname; //mandatory
      contexts extends JettySampleContexts;

      context extends JettyServletContext {
         contextPath "/test";
         resourceBase (ROOT:resourcebase);
         server LAZY PARENT;
     }
  }
}
