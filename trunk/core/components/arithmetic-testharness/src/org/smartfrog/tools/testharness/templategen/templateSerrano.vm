        classPath "${daemon.sfHome}${libSubdir}${mainJar}#foreach ($jar in $libJars);${daemon.sfHome}${libSubdir}${jar}#end"; 
#end

#if ($securityOn)
        secPolicy "${daemon.sfHome}/private/sf.policy";
        secKeyStore "${daemon.sfHome}/private/local/mykeys.st";
