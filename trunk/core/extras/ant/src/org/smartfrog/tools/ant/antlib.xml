<?xml version="1.0"?>
<antlib>
  <!-- ant1.6+ antlib declaration for the classes
  use with the declaration xmlns:sf="antlib:org.smartfrog.tools.ant" to
  trigger ant's autoload of this file, provided the relevant jars
  are in the antlib directory, or a dir stated with -lib on the command line"
  Alternatively, load with something like

  <typedef uri="antlib:org.smartfrog.tools.ant"
      resource="/org/smartfrog/tools/ant/tasks.xml"
      classpathref="smartfrog.classpath"
      xmlns:sf="antlib:org.smartfrog.tools.ant" />

  -->
  <taskdef name="conditional" classname="org.smartfrog.tools.ant.ConditionalSequence"/>
  <taskdef name="deploy" classname="org.smartfrog.tools.ant.StartApplication"/>
  <taskdef name="faultingwaitfor" classname="org.smartfrog.tools.ant.FaultingWaitForTask"/>
  <taskdef name="functionaltest"
      classname="org.smartfrog.tools.ant.FunctionalTestTask"/>
  <taskdef name="gui" classname="org.smartfrog.tools.ant.StartSmartFrogGui"/>
  <taskdef name="management-console" classname="org.smartfrog.tools.ant.StartManagementConsole"/>
  <taskdef name="parse" classname="org.smartfrog.tools.ant.Parse"/>
  <taskdef name="ping" classname="org.smartfrog.tools.ant.PingTask"/>
  <taskdef name="run" classname="org.smartfrog.tools.ant.RunApplicationTask"/>
  <taskdef name="tourl" classname="org.smartfrog.tools.ant.ToUrlTask"/>
  <taskdef name="sign" classname="org.smartfrog.tools.ant.SmartFrogSign"/>
  <taskdef name="stopdaemon" classname="org.smartfrog.tools.ant.StopDaemon"/>
  <taskdef name="startdaemon" classname="org.smartfrog.tools.ant.StartDaemon"/>
  <taskdef name="undeploy" classname="org.smartfrog.tools.ant.StopApplication"/>
  <taskdef name="timer" classname="org.smartfrog.tools.ant.SFTimer"/>

  <!-- this is the security type declaration -->
  <typedef name="security" classname="org.smartfrog.tools.ant.Security"/>
</antlib>
