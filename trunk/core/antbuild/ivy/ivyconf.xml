<ivysettings>
  <!--
  see http://www.jayasoft.org/ivy/doc/configuration
  -->
  <!-- you can override this property to use mirrors
          http://repo1.maven.org/maven2/
          http://mirrors.dotsrc.org/maven2
          http://ftp.ggi-project.org/pub/packages/maven2
          http://mirrors.sunsite.dk/maven2
          http://public.planetmirror.com/pub/maven2
          http://ibiblio.lsu.edu/main/pub/packages/maven2
          http://www.ibiblio.net/pub/packages/maven2
  -->
  <property name="ivy.ibiblio.root"
      value="http://mirrors.ibiblio.org/pub/mirrors/maven2" override="false"/>
  <property name="maven.restlet.org"
      value="http://maven.restlet.org/" override="false"/>
  <property name="maven-repository.dev.java.net"
    value="https://maven-repository.dev.java.net/" override="false"/>
  <!--the sun m2 repository is full of other people's stuff too, so list it last-->
  <property name="maven2.dev.java.net"
      value="http://download.java.net/maven/2/" override="false"/>
  <property name="smartfrog.sourceforge.repository"
      value="http://smartfrog.sourceforge.net/repository/" override="false"/>
  <property name="m2.fs.repo.dir" value="${user.home}/.m2/repository"/>
    
    
  <property name="maven2.pattern"
      value="[organisation]/[module]/[revision]/[module]-[revision]" />
  <property name="maven2.pattern.ext"
      value="${maven2.pattern}.[ext]" />
  <!-- pull in the local repository -->
  <include url="${ivy.default.conf.dir}/ivyconf-local.xml"/>
  <settings defaultResolver="default"/>
  <resolvers>
<!-- BUGBUG: not a real m2 repo structure
    <filesystem name="team">
      ivys="true" artifacts="true"
      m2compatible="true" >
      <artifact pattern="${root.dir}/antbuild/repository/${maven2.pattern.ext}"/>
      <ivy pattern="${root.dir}/antbuild/repository/${maven2.pattern}.xml"/>
    </filesystem>-->
    <filesystem name="team">
      ivys="true" artifacts="true"
      m2compatible="true"
      checkModified="true" >
      <artifact pattern="${root.dir}/antbuild/repository/${maven2.pattern.ext}"/>
      <ivy pattern="${root.dir}/antbuild/repository/${maven2.pattern}.xml"/>
    </filesystem>
    <filesystem name="team2">
      artifacts="true"
      usepom="true"
      checkModified="true"
      m2compatible="true" >
      <artifact pattern="${root.dir}/antbuild/repository/${maven2.pattern.ext}"/>
    </filesystem>
    <filesystem name="fs-m2" m2compatible="true" force="true">
      <artifact pattern="${m2.repo.dir}/org/apache/hadoop/[module]/[revision]/[module]-[revision].[ext]"/>
      <ivy pattern="${m2.repo.dir}/org/apache/hadoop/[module]/[revision]/[module]-[revision].pom"/>
    </filesystem>
    <ibiblio name="maven2"
        root="${ivy.ibiblio.root}"
        pattern="${maven2.pattern.ext}"
        m2compatible="true"
        />
    <ibiblio name="maven.restlet.org"
        root="${maven.restlet.org}"
        pattern="${maven2.pattern.ext}"
        m2compatible="true"
        />

    <ibiblio name="sun"
      root="${maven-repository.dev.java.net}"
      pattern="${maven2.pattern.ext}"
      m2compatible="true"
      />
    <ibiblio name="sun2"
        root="${maven2.dev.java.net}"
        pattern="${maven2.pattern.ext}"
        m2compatible="true"
        />
   <ibiblio name="smartfrog"
      root="${smartfrog.sourceforge.repository}"
      pattern="${maven2.pattern.ext}"
      m2compatible="true"
      />
    <chain name="default" dual="true">
      <resolver ref="local"/>
      <resolver ref="team2"/>
      <resolver ref="fs-m2"/>
      <resolver ref="maven2"/>
      <resolver ref="sun"/>
      <resolver ref="maven.restlet.org"/>
    </chain>
    <chain name="internal">
      <resolver ref="local"/>
      <resolver ref="team2"/>
    </chain>
    <chain name="all" dual="true">
      <resolver ref="local"/>
      <resolver ref="smartfrog"/>
      <resolver ref="team2"/>
      <resolver ref="maven2"/>
      <resolver ref="sun"/>
      <resolver ref="maven.restlet.org"/>
    </chain>
  </resolvers>
  <modules>
    <!--
      uncomment to pull in remote SF references
    -->
    <module organisation="org.smartfrog" name=".*" resolver="all"/>
    <!-- 
    <module organisation="org.smartfrog" name=".*" resolver="internal"/>
     -->
    <module organisation="org.ggf" name=".*" resolver="internal"/>
    
    <!-- here so that Steve can build the antbook at the same time-->
    <module organisation="org.antbook" name=".*" resolver="internal"/>
    <!--Hadoop artifacts-->
    <module organisation="org.apache.hadoop" name=".*" resolver="internal"/>
    <!--artifacts that we have locally only-->
    <module organisation="berkeleydb" name=".*" resolver="internal"/>
    <module organisation="mom4j" name=".*" resolver="internal"/>
    <module organisation="xindice" name=".*" resolver="internal"/>
    <module organisation="xmldb" name=".*" resolver="internal"/>
    <module organisation="javax.jms" name=".*" resolver="internal"/>
    <module organisation="kizoom" name=".*" resolver="internal"/>
    <module organisation="solid" name=".*" resolver="internal"/>

  </modules>
</ivysettings>
