#!/bin/sh
if [ -z "$SFHOME" -o ! -d "$SFHOME" ] ; then
    #echo "$0"
    SFHOME=`dirname "$0"`/..
    SFHOME=`cd "$SFHOME" && pwd`
    export SFHOME;
    echo SFHOME undefined, using $SFHOME as base directory;
fi
if [ -z $1 ] ; then
   echo "Insufficient arguments to use sfUpdate"
   echo "Usage: sfUpdate HostName ApplicationName URL [-p port]"
   exit 69
fi
if [ $# -eq 1 ] && [ "$1" = "-?" ];then
   echo "Usage: sfUpdate HostName ApplicationName URL [-p port]"
   exit 0
elif [ $# -lt 3 ];then
   echo "Wrong number of arguments for sfUpdate"
   echo "Usage: sfUpdate HostName ApplicationName URL [-p port]"
   exit 69
fi 

. "$SFHOME/bin/setSFProperties"

if test "$USERNAMEPREFIX_ON"; then
    APPNAME="`whoami`_$2";
else
    APPNAME="$2";
fi

if [ "$1" = "-p" ] || [ "$2" = "-p" ] || [ "$3" = "-p" ];then
   echo "Wrong number of arguments for sfUpdate"
   echo "Usage: sfUpdate HostName ApplicationName URL [-p port]"
   exit 69
fi 

if [ "$4" = "-p" ];then
	if [ -z "$5" ];then
   		echo "Wrong number of arguments for sfUpdate"
   		echo "Usage: sfUpdate HostName ApplicationName URL [-p port]"
   		exit 69
	fi 
	export OPTION="$4 $5";
fi
#java "$SFCMDPARAMETERS" org.smartfrog.SFSystem -a $2:UPDATE:$3::$1: -e


if test "$SFCODEBASE" && ! test "$SFSECURITY"; then
        java "$SFDEFAULTINI" $SFCODEBASE org.smartfrog.SFSystem -a \"$APPNAME\":UPDATE:\"$3\"::$1: $OPTION -e
elif test "$SFSECURITY" && ! test "$SFCODEBASE"; then
        java "$SFDEFAULTINI" $SFSECURITY org.smartfrog.SFSystem -a \"$APPNAME\":UPDATE:\"$3\"::$1: $OPTION -e
elif test "$SFCODEBASE" && test "$SFSECURITY"; then
        java "$SFDEFAULTINI" $SFCODEBASE $SFSECURITY org.smartfrog.SFSystem -a \"$APPNAME\":UPDATE:\"$3\"::$1: $OPTION -e
else
        java "$SFDEFAULTINI" $SFDEFAULTSECURITY org.smartfrog.SFSystem -a \"$APPNAME\":UPDATE:\"$3\"::$1: $OPTION -e
fi
