if ! test $SFHOME; then export SFHOME=$PWD; fi
export cmdSFSystem=java -Dorg.smartfrog.iniFile=$SFHOME/bin/default.ini org.smartfrog.SFSystem
if [ -z $1 ] ; then
echo "Insufficent arguments to use smarfrog"
$cmdSFSystem 
exit
fi
if ([ $1 == "-c" ] && [ -z $2 ] || ([ $1 == "-n" ] && ([ -z $2 ] || [ -z $3 ])));
then 
echo "Insufficent arguments to use sfRun"
echo "Usage: sfRun (-c URL | -n NAME URL)* [-e]"
exit
fi 
for i in $SFHOME/lib/*.jar; do CLASSPATH=$i:$CLASSPATH; done
export CLASSPATH
java -Dorg.smartfrog.iniFile=$SFHOME/bin/default.ini org.smartfrog.SFSystem $* -e

$cmdSFSystem -a $2:DEPLOY:$3::$1: -e