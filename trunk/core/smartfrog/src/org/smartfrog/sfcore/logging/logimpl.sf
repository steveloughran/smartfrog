/** "IGNORE" level logging. */
LOG_LEVEL_IGNORE  0;
/** "Trace" level logging. */
LOG_LEVEL_TRACE  1;
/** "Debug" level logging. */
LOG_LEVEL_DEBUG  2;
/** "Info" level logging. */
LOG_LEVEL_INFO   3;
/** "Warn" level logging. */
LOG_LEVEL_WARN   4;
/** "Error" level logging. */
LOG_LEVEL_ERROR  5;
/** "Fatal" level logging. */
LOG_LEVEL_FATAL  6;
/** Enable all logging levels */
LOG_LEVEL_ALL  0;
/** No logging */
LOG_LEVEL_OFF  (LOG_LEVEL_FATAL + 1);


LogImpl extends {
  localLoggerClass "org.smartfrog.sfcore.logging.LogToFile";
  localLoggerClass "org.smartfrog.sfcore.logging.LogToErr";
  logLevel LOG_LEVEL_INFO;
}
