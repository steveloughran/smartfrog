    <echo message=" initCA -->                        initializes a Certificate Authority"/>
    <echo message=" dummyInitCA -->                          initialise a dummyCA. Needed first time before any build"/>
    <echo message=" cleanCA     -->                            cleans the Certificate Authority"/>
