Output extends Prim {
    sfClass "org.smartfrog.test.system.deploy.OutputImpl";
    //to LAZY LinkToInput;
} 

Input extends Prim {
    sfClass "org.smartfrog.test.system.deploy.InputImpl";
}

NetElem extends Compound {
    inputs extends Compound;
    outputs extends Compound;
}

Dup extends NetElem {
    sfClass "org.smartfrog.test.system.deploy.Dup";
    inputs:value extends Input;
    outputs:copy1 extends Output;
    outputs:copy2 extends Output;
}

Constant extends NetElem {
    sfClass "org.smartfrog.test.system.deploy.Constant";
    outputs:value extends Output;
    constant 0;
}

Generator extends NetElem {
    sfClass "org.smartfrog.test.system.deploy.Generator";
    outputs:value extends Output;
    seed 6298426;
    max 10;
    min 0;
    interval 5;
}

Op extends NetElem {
    outputs:value extends Output;
}
UnaryOp extends Op {
    inputs:value extends Input;
}

BinaryOp extends Op {
    inputs:lhs extends Input;
    inputs:rhs extends Input;
}

Negate extends UnaryOp {
    sfClass "org.smartfrog.test.system.deploy.Negate";
}

Plus extends BinaryOp {
    sfClass "org.smartfrog.test.system.deploy.Plus";
}   

Delay extends UnaryOp {
    sfClass "org.smartfrog.test.system.deploy.Delay";
    delay 1;
}

Times extends BinaryOp {
    sfClass "org.smartfrog.test.system.deploy.Times";
}

Printer extends NetElem {
    sfClass "org.smartfrog.test.system.deploy.Printer";
    inputs:printVal extends Input;
}

/**
 * This NetElem component sends the difference 'target - candidate' to its output.
 * Can also be used to stop a test in the TestHarness. In this case 'counts' is used to 
 * know how many times we want to check for equality before the 'DONE' message is printed.
 */
Comparator extends NetElem {
    sfClass "org.smartfrog.test.system.deploy.Comparator";
    count 1; // the number of equalities to count before stopping the test.
    inputs:target extends Input;
    inputs:candidate extends Input;
}   
