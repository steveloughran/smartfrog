#!/bin/sh
if [ -z "$SFHOME" -o ! -d "$SFHOME" ] ; then
    #echo "$0"
    SFHOME=`dirname "$0"`/..
    SFHOME=`cd "$SFHOME" && pwd`
    export SFHOME;
    echo SFHOME undefined, using $SFHOME as base directory;
fi
if [ -z $1 ] ; then
  echo "Insufficient arguments to use sfDetachAndTerminate"
  echo "Usage: sfDetachAndTerminate HostName ComponentName"
  exit 69
fi 
if [ $# -eq 1 ] && [ $1 == "-?" ];then
   echo "Usage: sfDetachAndTerminate HostName ComponentName"
   exit 0
elif [ $# -ne 2 ];then
   echo "Insufficient arguments to use sfDetachAndTerminate"
   echo "Usage: sfDetachAndTerminate HostName ComponentName"
   exit 69
fi 

#for i in $SFHOME/lib/*.jar; do CLASSPATH=$i:$CLASSPATH; done
#export CLASSPATH

. $SFHOME/bin/setSFProperties

if test "$USERNAMEPREFIX_ON"; then
	APPNAME="`whoami`_$2";
else
	APPNAME="$2";
fi
#java $SFCMDPARAMETERS org.smartfrog.SFSystem -a $2:DETaTERM:::$1: -e

if test "$SFCODEBASE" && ! test "$SFSECURITY"; then
        java "$SFDEFAULTINI" "$SFCODEBASE" org.smartfrog.SFSystem -a \"$APPNAME\":DETaTERM:::$1: -e
elif test "$SFSECURITY" && ! test "$SFCODEBASE"; then
        java "$SFDEFAULTINI" $SFSECURITY org.smartfrog.SFSystem -a \"$APPNAME\":DETaTERM:::$1: -e
elif test "$SFCODEBASE" && test "$SFSECURITY"; then
        java "$SFDEFAULTINI" "$SFCODEBASE" $SFSECURITY org.smartfrog.SFSystem -a \"$APPNAME\":DETaTERM:::$1: -e
else
        java "$SFDEFAULTINI" org.smartfrog.SFSystem -a \"$APPNAME\":DETaTERM:::$1: -e
fi
