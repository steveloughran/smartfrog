#! /bin/sh
if ! test "$SFHOME"; then export SFHOME=$PWD; fi
if [ -z $1 ] ; then
   echo "Insufficient arguments to use sfTerminate"
   echo "Usage: sfTerminate HostName ComponentName"
exit
fi
if [ $# -eq 1 ] && [ $1 == "-?" ];then
   echo "Usage: sfTerminate HostName ComponentName"
   exit
elif [ $# -ne 2 ];then
   echo "Insufficient arguments to use sfTerminate"
   echo "Usage: sfTerminate HostName ComponentName"
   exit
fi
#for i in $SFHOME/lib/*.jar; do CLASSPATH=$i:$CLASSPATH; done
#export CLASSPATH

. "$SFHOME/bin/setSFProperties"

#java $SFCMDPARAMETERS org.smartfrog.SFSystem -a $2:TERMINATE:::$1: -e

if test "$SFCODEBASE" && ! test "$SFSECURITY"; then
        java "$SFDEFAULTINI" "$SFCODEBASE" org.smartfrog.SFSystem -a $2:TERMINATE:::$1: -e
elif test "$SFSECURITY" && ! test "$SFCODEBASE"; then
        java "$SFDEFAULTINI" $SFSECURITY org.smartfrog.SFSystem -a $2:TERMINATE:::$1: -e
elif test "$SFCODEBASE" && test "$SFSECURITY"; then
        java "$SFDEFAULTINI" "$SFCODEBASE" $SFSECURITY org.smartfrog.SFSystem -a $2:TERMINATE:::$1: -e
else
        java "$SFDEFAULTINI" org.smartfrog.SFSystem -a $2:TERMINATE:::$1: -e
fi
