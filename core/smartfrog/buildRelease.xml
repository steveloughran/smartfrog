      <patternset refid="other.bin" />
    </zipfileset>
    <zipfileset id="unix.bin.zf" dir="bin" filemode="${exec}"
        prefix="${prefix}/bin">
      <patternset refid="unix.bin" />
    </zipfileset>
    <zipfileset id="other.bin.zf" dir="bin"
