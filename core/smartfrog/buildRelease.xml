    <property name="prefix" value="${Name.System}.${version}" />
    <mkdir dir="${release.dir}" />
    <mkdir dir="${release.unzip.dir}" />

    <property name="dist.zip" location="${release.dir}/${prefix}.${DSTAMP}_dist.zip"/>
