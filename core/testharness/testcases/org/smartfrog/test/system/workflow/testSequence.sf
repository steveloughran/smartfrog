#include "org/smartfrog/components.sf"
#include "org/smartfrog/sfcore/workflow/combinators/sequence.sf"
#include "org/smartfrog/functions.sf"
#include "/org/smartfrog/services/os/runshell/components.sf"

/**
 * Tests the scenario where failure of one component in sequence leads to 
 * sequence termination. First component creates a temp dir and third component
 * removes that but second component fails and thus third is never executed.
 */
testSequence extends Sequence {
    actions extends LAZY {
        // creates a dir
        comp1 extends WinNTShellScript {
            processName "shellNT";
            processId   "1";
            cmdCD "md tempDir";
            shouldTerminate true;
        }
        comp2 extends Prim {
            // fails and leads to sequence termination
            sfClass "org.smartfrog.sfcore.NoClass"; 
        }
        comp3 extends WinNTShellScript {
            processName "shellNT";
            processId   "1";
            cmdCD "rmdir /s tempDir";
        }
    }
}
sfConfig extends Compound {
    test extends testSequence;
}
