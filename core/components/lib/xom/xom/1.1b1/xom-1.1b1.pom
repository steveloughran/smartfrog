    </dependency>
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.6.2</version>
    </dependency>
    <!--
    <dependency>
      <groupId>icu4j</groupId>
      <artifactId>icu4j</artifactId>
