  <groupId>xom</groupId>
  <artifactId>xom</artifactId>
  <version>1.1b1</version>
  <ciManagement>
    <notifiers>
      <notifier>
        <address>elharo@metalab.unc.edu</address>
      </notifier>
    </notifiers>
  </ciManagement>
  <developers>
    <developer>
      <id>elharo</id>
      <name>Elliotte Rusty Harold</name>
      <email>elharo@metalab.unc.edu</email>
      <organization>Cafe au Lait</organization>
    </developer>
