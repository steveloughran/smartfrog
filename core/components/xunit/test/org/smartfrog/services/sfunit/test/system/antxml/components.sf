#include "/org/smartfrog/services/sfunit/components.sf"
#include "/org/smartfrog/services/xunit/all.sf"
#include "/org/smartfrog/services/xunit/listeners/antxml/components.sf"
#include "/org/smartfrog/services/filesystem/components.sf"
#include "/org/smartfrog/services/assertions/components.sf"
#include "/org/smartfrog/services/ant/components.sf"


test.data.dir (PROPERTY test.data.dir ++ "/sfdata");

test.reports.dir (PROPERTY test.data.dir ++ "/reports");

//these are components we run underneath
SimpleTestCompound extends ExpectTerminate {
    action extends Sequence {
    }
}


FailingTestCompound extends TestCompound {
    action extends FailAbnormal;
}



antxml extends AntXmlTestListener {
  outputDirectory test.data.dir; 
}


antreport extends AntWorkflowRun {
  md extends mkdir {
    dir test.reports.dir;
  }

  reports extends junitreport {
      todir test.reports.dir;
      myFileSet extends fileset {
        dir PROPERTY test.data.dir;
        includes "*.xml";
      }
  }

}

AssertFileExists extends FileMustExist {
    sfShouldTerminate true;
}


testRunnerAntXml extends TestRunner {
  description "push out as Ant XML";

  sfShouldTerminate true;

  listener extends antxml {
  }

  tests1 extends SFUnitTestSuite {
    name "tests1";
    description "run some basic tests";
    sfShouldTerminate true;
    
    one extends SimpleTestCompound;
    two extends FailingTestCompound;

  }
}

testSFUnitAntXml extends testRunnerAntXml {
}

testSFUnitAntXmlNested extends ExpectTerminate {
  action extends testRunnerAntXml {
    sfShouldTerminate true;
  }
}


testAntXmlThroughJunit extends ExpectDeploy {
  action extends Compound {
  }

  tests extends Sequence {

    testrun testRunnerAntXml;

    /**
     * assert the ant XML data got created
     */
    assertDataGenerated extends AssertFileExists {
      dir test.data.dir;
      filename "tests1.xml"
    }

    reports antreport;

    assertReportIndexGenerated extends AssertFileExists {
      dir test.reports.dir;
      filename "index.html"
    }
  }

}










