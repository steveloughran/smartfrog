/**
 * Test the local node
 */
testLocalTaskTracker extends ExpectDeploy {
  description "bring up a Task Tracker";



  action extends LocalClusterCompound {
  }

  tests extends MapReduceTestSequence {
    jobTracker LAZY action:jobTracker;
    taskTracker LAZY action:taskTracker;
    cluster PARENT:action:cluster;
    datanode LAZY PARENT:action:datanode;
    namenode LAZY PARENT:action:namenode;
  }


}





testLocalTaskTrackerForked extends testLocalTaskTracker {
  //action:LocalDataNode:sfProcessName "testDataNodeForkedProcess";
