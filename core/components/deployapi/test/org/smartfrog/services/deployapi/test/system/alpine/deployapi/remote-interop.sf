#include "/org/smartfrog/services/deployapi/test/system/alpine/deployapi/nec.sf"
#include "/org/smartfrog/services/deployapi/test/system/alpine/deployapi/ourgrid.sf"
#include "org/smartfrog/services/utils/setproperty/components.sf"

sfConfig extends Compound {

  tempDir LAZY PROPERTY java.io.tmpdir;

  proxy extends SystemProperties {
    setOnDeploy true;
    unsetOnTerminate true;
    properties [
      ["http.proxyHost","web-proxy"],
      ["http.proxyPort","8088"]
      ];
  }

  ourgrid extends ourGridTests {
    basedir tempDir;
  }

}
