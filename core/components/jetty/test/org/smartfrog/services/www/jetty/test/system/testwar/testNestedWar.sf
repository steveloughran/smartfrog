#include "/org/smartfrog/services/www/jetty/test/system/testwar/components.sf"

sfConfig extends Compound {
    sfSyncTerminate true;

  //this is set in the test run
    testwar extends TestWar;

    port test.jetty.port.1;
    home test.jetty.home;

   /*
    this is the jetty server itself
    */
   server extends CoreJettyServer {

      jettyhome PARENT:home;

      port PARENT:port;


   }

    deployedWar extends WebApplication {
        server LAZY PARENT:server;
        filename LAZY testwar:absolutePath;
        contextPath "testwar";
    }


    listener extends JettySocketConnector {
        server LAZY PARENT:server;
        port PARENT:port;
    }


    //this is here because without it, ping doesnt get the lazy information from
    //the webapp in time
    //ping LAZY server:ping;

    //there's a bit of a race condition here; no files are

    ping extends LivenessPage {
        host LAZY server:listener:ipaddr;
        port PARENT:port;
        page PARENT:deployedWar:contextPath;
        checkFrequency 1;
        followRedirects true;
    }


}