#include "/org/smartfrog/services/www/jetty/test/system/full/components.sf";

/**
 * Test that we can deploy stuff inside ourselves.
 * This is a good check of race conditions
 */
sfConfig extends Compound {


  server extends CoreJettyServer {
      jettyhome ROOT:jetty_home; // mandatory


      listener extends JettyListener {
            listenerPort 8017;
            //serverHost "localhost";
            server LAZY PARENT;
      }

       root extends Root {
         server LAZY PARENT;
       }
   }


    ping extends LivenessPage {
        host LAZY server:listener:ipaddr;
        port server:port;
        page LAZY root:absolutePath;
        checkFrequency 1;
    }
}
