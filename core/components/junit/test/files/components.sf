#include "/org/smartfrog/components.sf"
#include "/org/smartfrog/predicates.sf"
#include "/org/smartfrog/services/junit/components.sf"

sfCodeBase PROPERTY org.smartfrog.codebase;


/**
 * base for our tests
 */
TestBase extends JUnitTestSuite {

    package "org.smartfrog.services.junit.test.targets";
}

/**
 * local junit tests
 */
LocalJUnitTestRunner extends TestRunner {
//    sfCodeBase PROPERTY org.smartfrog.codebase
}

/**
 * listen to a buffer
 */
BufferingTestRunner extends LocalJUnitTestRunner {
    //buffer the results
    listener extends BufferingListener;
}

/**
 * log to an XML file
 */

XmlTestRunner extends LocalJUnitTestRunner {
    //TODO
}

/**
 * This is the base for all our tests.
 */

testAll extends LocalJUnitTestRunner {

    mostTests extends MostTests;
}

/**
 * all but the very troublesome ones
 */
MostTests extends TestBase {
    name "MostTests";
    classes [
        FailureTest:classes,
        SuccessTest:classes,
        "ThrowingTest",
        "FunnyCharactersTest",
        "OutputTest"];
}

/**
 * system exit handling
 */
SystemExitTest extends TestBase {
    name "SystemExitTest";
    classes ["SystemExitTest"];
}


/**
 * test failure
 */
FailureTest extends TestBase {
    name "FailureTest";
    classes ["FailureTest"];
}


/**
 * test that arbitrary exceptions are processed
 */
ThrowingTest extends TestBase {
    name "ThrowingTest";
    classes ["ThrowingTest"];
}

/**
 * test success
 */
SuccessTest extends TestBase {
    name "SuccessTest";
    classes [name];
}