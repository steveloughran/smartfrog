#include "/org/smartfrog/services/filesystem/components.sf"
#include "/org/smartfrog/services/assertions/components.sf"
#include "/org/smartfrog/services/amazon/s3/components.sf"

bucket "smartfrogtest";
login PROPERTY test.awsid;
password PROPERTY test.awskey
timeout 10000;

bucketURL (bucket ++ ".s3.amazonaws.com");


Testbucket extends  TransientS3Bucket {
    name ROOT:bucket;
    username ROOT:login;
    password ROOT:password;
    connectTimeout timeout;
}



/**
 * bucket in a workflow
 */
WorkflowBucket extends  TransientS3Bucket {
    sfShouldTerminate true;
}


GetBucket extends Testbucket {
  startActions [GET];
}

HeadBucket extends Testbucket {
  startActions [GET];
}

DeleteBucket extends Testbucket {
  startActions [Delete];
  maximumResponseCode HttpCodes:NOT_FOUND;
  minimumResponseCode maximumResponseCode;
}


/**
 * Look for the bucket
 */
ProbeForBucket extends WaitForPage {
  url bucketURL;
  fetchErrorText true;
  checkFrequency 100;
  timeout ROOT:timeout;
}

/**
 A test using a bucket
 */

BucketTest extends ExpectDeploy {

  action extends  Compound {

    datasource extends TextDataSource { text "";}

    bucket extends Testbucket  {
      datasource LAZY PARENT:datasource ;
    }

  }

}


testCreateBucket extends BucketTest {

}


testDeployGetBucket extends BucketTest {

  tests extends Sequence {

    -- extends ProbeForBucket;
  }

}
