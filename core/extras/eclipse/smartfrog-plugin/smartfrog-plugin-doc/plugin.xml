<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.smartfrog.tools.doc"
   name="%pluginName"
   version="1.0.0.Beta"
   provider-name="%providerName">

   <requires>
      <import plugin="org.eclipse.help"/>
   </requires>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
      <toc
            file="tocgettingstarted.xml">
      </toc>
      <toc
            file="tocconcepts.xml">
      </toc>
      
      <toc
            file="tocreference.xml">
      </toc>
      
      <toc
            file="toctasks.xml">
      </toc>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml"
            plugin="org.smartfrog.tools">
      </contexts>
   </extension>

</plugin>
